        <Label Content="" HorizontalAlignment="Left" Margin="100,40,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
        <Label Content="Price:" HorizontalAlignment="Left" Margin="57,70,0,0" VerticalAlignment="Top"/>
